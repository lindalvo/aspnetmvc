

        <form action="/Produto/Adiciona" method="post">
            @Html.ValidationMessage("produto.Invalido")
            <label for="nome">Nome:</label>
            <input name="produto.Nome" id="nome" value="@ViewBag.Produto.Nome" class="form-control"/>
            @Html.ValidationMessage("produto.Nome")

            <label for="preco">Preço:</label>
            <input name="produto.Preco" id="preco" value="@ViewBag.Produto.Preco" class="form-control"/>

            <label for="quantidade">Quantidade:</label>
            <input name="produto.Quantidade" id="quantidade" value="@ViewBag.Produto.Quantidade" class="form-control"/>

            <label for="descricao">Descricao:</label>
            <input name="produto.Descricao" id="descricao" value="@ViewBag.Produto.Descricao" class="form-control"/>

            <label for="categoria">Categoria:</label>
            <select id="categoria" name="produto.CategoriaId" class="form-control">
                @foreach (var categoria in ViewBag.Categorias)
                {
                    <option value="@categoria.Id" selected="@categoria.Id.Equals(ViewBag.Produto.CategoriaId)">@categoria.Nome</option>
                }
            </select>

            <input type="submit" value="Cadastrar" />
        </form>
